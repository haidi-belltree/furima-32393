<li class='list'>
  <%= link_to(item_path(item.id)) do %>
  <div class='item-img-content'>
    <div>
      <%= image_tag item.images[0], class: "item-img" %>
    </div>
    <% @payments.each do |payment| %>
      <% if payment.item_id == item.id %>
        <div class='sold-out'>
          <span>Sold Out!!</span>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= item.title %>
    </h3>
    <div class='item-price'>
      <span><%= item.price %>å††<br><%= item.postage.name %></span>
      <div class='star-btn'>
        <%= image_tag "star.png", class:"star-icon" %>
        <span class='star-count'>0</span>
      </div>
    </div>
  </div>
  <% end %>
</li>
